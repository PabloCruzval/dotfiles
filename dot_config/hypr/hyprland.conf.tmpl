# Hyprland configuration for Desktop PC
# Import modular configurations

# Theme colors (generated by theme-toggle script)
source = ~/.cache/theme/hyprland_colors.conf

# Core configuration
source = ~/.config/hypr/modules/env.conf
source = ~/.config/hypr/modules/general.conf
source = ~/.config/hypr/modules/inputs.conf
source = ~/.config/hypr/modules/decorations.conf
source = ~/.config/hypr/modules/animations.conf

# Behavior
source = ~/.config/hypr/modules/windowrules.conf
source = ~/.config/hypr/modules/keybindings.conf
source = ~/.config/hypr/modules/autostart.conf

# Monitor configuration (device-specific)
{{- if eq .machinename "cnyx" }}
source = ~/.config/hypr/modules/monitors-desktop.conf
{{- else if eq .machinename "lnyx"}}
source = ~/.config/hypr/modules/monitors-laptop.conf
{{- else }}
monitor = ,auto,auto,1
{{- end }}
